pipeline {
    agent any

    triggers {
        pollSCM '* * * * *'
    }

    environment {
        DOCKER_PATH = credentials('DOCKER_HUB_USER_PATH')
        DOCKER_AUTH = credentials('DOCKER_HUB_AUTH')

        DOCKER_IMAGE_NAME = 'spring_docker_test'
    }
    stages {
        stage('Build') {
            steps {
                bat 'mvn clean install'
            }
        }
        stage('Tests') {
            steps {
                bat 'mvn test'
            }
        }
        stage('Build Docker image') {
            steps {
                bat 'mvn spring-boot:build-image -Dspring-boot.build-image.imageName=$(DOCKER_PATH)/$(DOCKER_IMAGE_NAME)'
            }
        }
        stage('Push Docker image') {
            steps {
                bat 'docker login --username=$(DOCKER_AUTH_USR) --password=$(DOCKER_AUTH_PSW)'
                bat 'docker push $DOCKER_PATH/$DOCKER_IMAGE_NAME'
            }
        }
    }
}
